# API Keys
HF_TOKEN="your_huggingface_token"
GEMINI_API_KEY="your_gemini_api_key"

# Qdrant Cloud config
QDRANT_URL="your_qdrant_url"
QDRANT_API_KEY="your_qdrant_api_key"
COLLECTION_NAME="csdl_docs"

# Embedding config
EMBEDDING_MODEL="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
EMBEDDING_DEVICE="cpu"  # 'cpu' hoặc 'cuda'

# Reranker config
RERANKER_MODEL="BAAI/bge-reranker-base"
RERANKER_DEVICE="cpu"  # 'cpu' hoặc 'cuda'
RERANKER_BATCH_SIZE=16
RERANKER_USE_FP16=false
RERANKER_ENABLED=true

# Query Expansion config
QUERY_EXPANSION_ENABLED=true
QUERY_EXPANSION_NUM_QUERIES=2
USE_SELF_QUERY=false

# Document Loader config
DOCUMENT_LOADER_MAX_WORKERS=8

# Chunking config
CHUNK_BUFFER_SIZE=2
CHUNK_BREAKPOINT_THRESHOLD_TYPE="percentile"
CHUNK_BREAKPOINT_THRESHOLD_AMOUNT=0.8

# Clustering config
CLUSTER_DISTANCE_THRESHOLD=1.2
CLUSTERING_BATCH_SIZE=128

# Retrieval config
RETRIEVAL_SEARCH_TYPE="similarity"  # 'similarity' hoặc 'mmr'
RETRIEVAL_TOP_K=15

# Gemini config
GEMINI_MODEL="models/gemini-2.0-flash"
GEMINI_TEMPERATURE=0.0
GEMINI_TOP_P=0.0
GEMINI_TOP_K=1