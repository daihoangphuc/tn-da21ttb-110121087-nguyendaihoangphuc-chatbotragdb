# API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# Qdrant Vector Store Configuration
QDRANT_URL=https://your-qdrant-instance.com
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=csdl_rag

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-base

# LLM Configuration
LLM_MODEL_NAME=gemini-2.0-flash
LLM_TEMPERATURE=0
LLM_TOP_P=0.85
LLM_MAX_OUTPUT_TOKENS=2048

# API Configuration
API_PREFIX=/api
API_TITLE="Hệ thống RAG cho Cơ sở dữ liệu"
API_DESCRIPTION="API cho hệ thống tìm kiếm và trả lời câu hỏi sử dụng RAG"
API_VERSION="1.0.0"

# Directories Configuration
UPLOAD_DIR=src/data
FEEDBACK_DIR=src/feedback
SYNONYMS_DIR=src/data/synonyms
SYNONYMS_FILE=src/data/synonyms/synonyms.json

# Search Configuration
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
QUERY_EXPANSION_MODEL=paraphrase-multilingual-mpnet-base-v2

# Parallel Processing Configuration
MAX_PARALLEL_WORKERS=4

# Query Compression Configuration
USE_QUERY_COMPRESSION=true
MAX_QUERY_LENGTH=250
QUERY_COMPRESSION_RATIO=0.5

# Fact Checking Configuration
ENABLE_FACT_CHECKING=true
FACT_CHECKING_THRESHOLD=0.6
